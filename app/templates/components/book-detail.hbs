<div class="row bookRow" data-book="">
  <div class="col-sm-2">
    <a {{bind-attr href='book.url'}} target='_blank'>
      <img {{bind-attr src='book.image'}} />
    </a>
    <div class="col-sm-8">
    <p class="rating">{{ book.rating }}/5</p>
    </div>
  </div>
  <div class="col-sm-8">
    <h3>{{#link-to 'book' book}}{{ book.title }}{{/link-to}}</h3>
    <p><i>Written by {{ book.author }}</i></p>
    <p>{{ book.description }}</p>
    <p><i>{{!-- <%= link_to "Delete Book", book, method: :delete, remote: true %> --}}</i></p>
   <span>{{#link-to 'genre' book.genre class="btn btn-primary btn-xs"}} {{ book.genre.name }}{{/link-to}}</span>
  </div>
</div>