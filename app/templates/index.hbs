<div class="row breadRow">
  <ol class="breadcrumb">
    <li class="active">Books</li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-2">
    {{#link-to 'reviews.new' class='btn btn-primary'}}New Book Form{{/link-to}}
  </div>
  <div class="col-sm-10">
      <form class="form-inline">
        <div class="form-group">
          <label for="keyword">Search</label>
          <input type="text" class="form-control" value='' name='keyword' placeholder='Keyword' />
        </div>
      </form>
  </div>  
</div>
<div class="row bookForm">
  {{!-- <%= render 'form' %> --}}
</div>

  <div class="row">
    <div class="col-sm-10 bookList">
      {{#each book in orderedBooks}}
        {{book-detail book=book}}
      {{/each}}
    </div>
    <div class="col-sm-2">
        <h3>Genres</h3>
        <ul class="list-unstyled genreList">
         {{#each genre in orderedGenres}}
           <li>{{#link-to 'genre' genre class='btn btn-primary btn-sm'}}{{genre.name}}{{/link-to}}</li>
         {{/each}}
        </ul>
    </div>
  </div>
<br>

