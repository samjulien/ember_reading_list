<div class="row bookRow" data-book="">
  <div class="col-sm-2">
    <a {{bind-attr href='book.url'}} target='_blank'>
      <img {{bind-attr src='book.image'}} />
    </a>
    <p><b>Rating:</b> {{ book.rating }}/5</p>
  </div>
  <div class="col-sm-8">
    <h3>{{ book.title }}</h3>
    <p><i>Written by {{ book.author }}</i></p>
    <p>{{ book.description }}</p>
    <p><i>{{!-- <%= link_to "Delete Book", book, method: :delete, remote: true %> --}}</i></p>
   <span class="label" style="margin-bottom: 1.5em; color: black">{{ book.genre.name }}</span>
  </div>
</div>