<div class="row breadRow">
  <ol class="breadcrumb">
    <li>{{#link-to 'index'}}Books{{/link-to}}</li>
    <li class="active">{{name}}</li>
  </ol>
</div>

{{#each book in this.books}}
        {{book-detail book=book}}
{{ else }}
<div class="row bookRow">
	<div class="col-sm-12">
		<p><i>No books found in this genre.</i></p>
	</div>
</div>
{{/each}}